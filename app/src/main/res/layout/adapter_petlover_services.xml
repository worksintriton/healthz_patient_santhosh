<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="75dp"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cv_serviceimage"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_hzservicon1"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_petlover_servicesname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_serviceimage"
        android:layout_gravity="bottom|center_vertical"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:gravity="center|bottom"
        android:maxLines="1"
        android:text="@string/sub_services"
        android:textColor="@color/solid_bgnd"
        android:textSize="12sp" />


</RelativeLayout>