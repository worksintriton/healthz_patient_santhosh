<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">

    <FrameLayout
        android:id="@+id/llheader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nav_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:maxLines="1"
                android:drawablePadding="5dp"
                android:text="@string/healthz"
                android:textColor="@color/lato_black"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/hz_mdszdlogo"
                tools:ignore="RelativeOverlap" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/nav_header_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nav_header_title"
                android:src="@drawable/nav_headerprofile" />

            <TextView
                android:id="@+id/nav_header_profilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nav_header_imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/alfredo_press"
                android:textColor="@color/lato_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/nav_header_emailid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nav_header_profilename"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/lato_light"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/dukauwa_du_gmail_com"
                android:textColor="@color/lato_black"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/image_description"
                app:srcCompat="@drawable/icn_arrow"
                />
        </RelativeLayout>

    </FrameLayout>


</LinearLayout>
